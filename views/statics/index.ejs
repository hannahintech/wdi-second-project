
<div class="container index-page">
  <div class="container last-container centered-content">
        <a href="/outfits" class="btn btn-outline-success btn-lg btn-block">Browse outfits</a>
  </div>
  <% if (locals.isLoggedIn) { %>
  <div class="container last-container centered-content">
      <a href="/outfits/new" class="btn btn-outline-primary btn-lg btn-block">Create an Outfit</a>
  </div>
  <% } %>
