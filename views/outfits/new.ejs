<div class="container last-container">
  <h3>create an outfit</h3>

<form method="POST" action="/outfits">
  <div class="container last-container">
    <h4>pick your items:</h4>
    <ul class="container">
      <div class="row">
        <% items.forEach((item) => { %>
          <li class"col-lg-2" class="form-item">
            <input type="checkbox" name="items[]" value="<%= item.id %>" id="<%= item.id %>">
            <label for="<%= item.id %>">
              <div class="outfit-image-div" style="background-image:url('<%= item.image %>')">
              </div>
            </label>
          </li>
        <% }) %>
      </div>
    </ul>

    <div class="form-group">
      <label for="name">name your outfit:</label>
      <input name="name" type="text" class="form-control" id="outfit-name" placeholder="new outfit" required>
    </div>

    <div class="form-group">
      <label for="weather">weather</label>
      <select multiple name="weather" class="form-control" id="weather">
        <option>hot</option>
        <option>warm</option>
        <option>mild</option>
        <option>cold</option>
      </select>
    </div>

    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="special-occassion">
      <label class="form-check-label" for="specialOccassion" name="specialOccassion">special occasion outfit!</label>
    </div>

    <div class="sumbit-item">
      <button type="submit" class="btn btn-outline-success">create</button>
    </div>
  </div>
</form>

</div>
