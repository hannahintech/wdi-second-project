<%# generate outfit and outfit generated - one page? %>
<div class="centered-content">
  <div class="container">
    <a href="" class="btn btn-outline-success btn-lg">Generate Outfit</a>
  </div>
</div>

<form method="POST" action="/outfits">
  <input name="name" type="text" placeholder="Name of outfit">

  <ul class="container">
    <div class="row">
      <% items.forEach((item) => { %>
        <li class"col-lg-2" class="form-item">
          <input type="checkbox" name="items[]" value="<%= item.id %>" id="<%= item.id %>">
          <label for="<%= item.id %>">
            <div class="outfit-image-div" style="background-image:url('<%= item.image %>')">
            </div>
          </label>
        </li>
      <% }) %>
    </div>
  </ul>

  <div class="form-group">
    <label for="weather">Weather</label>
    <select multiple name="weather" class="form-control" id="weather">
      <option>hot</option>
      <option>warm</option>
      <option>mild</option>
      <option>cold</option>
    </select>
  </div>

  <div class="form-check">
    <input type="checkbox" class="form-check-input" id="special-occassion">
    <label class="form-check-label" for="specialOccassion" name="specialOccassion">special occasion item!</label>
  </div>

  <div class="sumbit-item">
    <button type="submit" class="btn btn-outline-success">Create</button>
  </div>
</form>
